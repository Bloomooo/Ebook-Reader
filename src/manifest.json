{
  "manifest_version": 2,
  "name": "Ebook Reader",
  "version": "1.0",
  "description": "Une extension pour lire et g√©rer vos ebooks",
  "icons": {
    "48": "assets/icon.ico"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; img-src 'self' blob: data:"
  },
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": "assets/icon.ico"
  },
  "permissions": ["activeTab", "storage"],
  "background": {
    "scripts": [
      "background/background.js"
    ],
    "persistent": false
  },
  "web_accessible_resources": [
    {
      "resources": ["*.png", "*.jpg", "*.jpeg", "*.gif", "images/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
